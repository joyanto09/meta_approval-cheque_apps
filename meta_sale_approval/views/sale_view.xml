<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_sale_view_form_extends" model="ir.ui.view">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][2]"  position="replace">
				<button name="sale_operation_send_approval" states="draft" string="Send Approval" class="btn" type="object" groups="meta_sale_approval.sale_operation_send_approve"/>
			</xpath>

            <xpath expr="//button[@name='action_quotation_send'][2]"  position="before">
				<button name="first_approval" states="first_approval" string="Approve" class="btn" type="object" groups="meta_sale_approval.sale_headof_marketing_approve"/>
                <button name="first_approval_reject" states="first_approval" string="Cancel" class="btn" type="object" groups="meta_sale_approval.sale_headof_marketing_approve"/>

                <button name="second_approval" states="second_approval" string="Approve" class="btn" type="object" groups="meta_sale_approval.sale_headof_finance_approve"/>
                <button name="second_approval_reject" states="second_approval" string="Cancel" class="btn" type="object" groups="meta_sale_approval.sale_headof_finance_approve"/>

                <button name="third_approval" states="third_approval" string="Approve" class="btn" type="object" groups="meta_sale_approval.sale_coo_approve"/>
                <button name="third_approval_reject" states="third_approval" string="Cancel" class="btn" type="object" groups="meta_sale_approval.sale_coo_approve"/>

                <button name="fourth_approval" states="fourth_approval" string="Approve" class="btn" type="object" groups="meta_sale_approval.sale_ceo_approve"/>
                <button name="fourth_approval_reject" states="fourth_approval" string="Cancel" class="btn" type="object" groups="meta_sale_approval.sale_ceo_approve"/>

                <button name="action_confirm" states="to approve" string="Confirm" class="btn" type="object"/>
                <button name="action_cancel" states="to approve" string="Cancel" class="btn" type="object"/>
			</xpath>

            <xpath expr="//field[@name='state']"  position="replace">
				<field name="state" widget="statusbar" statusbar_visible="draft,sale,first_approval,second_approval,third_approval,fourth_approval,"/>
			</xpath>
        </field>
    </record>
</odoo>

